extends layout

block content
  h2.page-header Login
  p Please login
  if errors
    div.alert.alert-danger #{errors}
  form(method='post', action='/users/login')
    .form-group
      label Email
      input.form-control(name='email', type='text')
    .form-group
      label Password
      input.form-control(name='password', type='password')
    input.btn.btn-primary(type='submit', name='submit', value='Login')